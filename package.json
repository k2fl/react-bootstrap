{
  "name": "@someden/react-bootstrap",
  "version": "0.2.3",
  "description": "React components that uses Bootstrap 4 as a base for styles.",
  "authors": [
    "Denis Efremov <someden@ya.ru>"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "es",
    "lib"
  ],
  "tags": [
    "react",
    "bootstrap",
    "ui",
    "components"
  ],
  "keywords": [
    "react",
    "bootstrap",
    "ui",
    "components"
  ],
  "homepage": "https://someden.github.io/react-bootstrap/",
  "repository": {
    "type": "git",
    "url": "someden/react-bootstrap"
  },
  "bugs": {
    "url": "https://github.com/someden/react-bootstrap/issues"
  },
  "scripts": {
    "start": "start-storybook -p 3000 -c stories",
    "build": "nwb build-react-component --copy-files",
    "clean": "nwb clean-module && nwb clean-demo",
    "prettify": "prettier 'src/**/*.js' 'src/**/*.jsx' 'stories/**/*.js' 'stories/**/*.jsx' --write",
    "lint": "eslint --ext .js,.jsx src/ stories/ --fix",
    "deploy": "gh-pages -b build -d . -s '{package.json,es/**,lib/**}'",
    "build-storybook": "build-storybook -c stories -o build/storybook",
    "deploy-storybook": "gh-pages -d build/storybook",
    "precommit": "lint-staged"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "moment": "^2.22.2",
    "popper.js": "^1.14.4",
    "prop-types": "^15.6.2",
    "react-autocomplete": "^1.8.1",
    "react-style-proptype": "^3.2.1"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.10",
    "@storybook/addon-info": "^3.4.10",
    "@storybook/addon-options": "^3.4.10",
    "@storybook/react": "^3.4.10",
    "@types/prop-types": "^15.5.4",
    "@types/react": "^16.4.7",
    "@types/react-dom": "^16.0.6",
    "babel-eslint": "^8.2.6",
    "eslint": "^5.2.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "gh-pages": "^1.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "nwb": "^0.23.0",
    "prettier": "^1.14.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "peerDependencies": {
    "react": "^16.4.0",
    "react-dom": "^16.4.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "commonjs": true,
      "es6": true,
      "jest": true
    },
    "plugins": [
      "import",
      "jsx-a11y",
      "react"
    ],
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "default-case": "off",
      "indent": "off",
      "object-curly-newline": "off",
      "function-paren-newline": "off",
      "jsx-quotes": [
        "error",
        "prefer-single"
      ],
      "implicit-arrow-linebreak": "off",
      "max-len": "off",
      "operator-linebreak": ["error", "before", { "overrides": { "=": "ignore", "&&": "ignore", "||": "ignore" } }],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/stories/**/*.*"
          ]
        }
      ],
      "react/sort-comp": [
        "off"
      ],
      "react/no-array-index-key": "off",
      "react/destructuring-assignment": ["off", "always"],
      "react/jsx-one-expression-per-line": "off",
      "react/jsx-wrap-multilines": [
        "error",
        {
          "declaration": "parens-new-line",
          "assignment": "parens-new-line",
          "return": "parens-new-line",
          "arrow": "parens-new-line",
          "condition": "parens-new-line",
          "logical": "parens-new-line",
          "prop": "ignore"
        }
      ]
    }
  },
  "eslintIgnore": [
    "/coverage/*",
    "/build/*",
    "/demo/dist/*",
    "/es/*",
    "/lib/*",
    "/umd/*",
    "/public/*"
  ],
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "{src,stories}/**/*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
